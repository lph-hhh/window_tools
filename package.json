{
  "name": "my-electron-vue-app",
  "version": "1.0.0",
  "description": "A simple Electron application using Vue 3 and TypeScript.",
  "main": "build/main/main.js",
  "scripts": {
    "build": "node scripts/build.js && electron-builder",
    "build:win": "node scripts/build.js && electron-builder --win",
    "serve": "vite --port 8080",
    "start": "electron .",
    "dev": "node scripts/dev-server.js",
    "compile": "tsc",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitejs/plugin-vue": "^4.0.0",
    "chalk": "^5.5.0",
    "chokidar": "^4.0.3",
    "concurrently": "^8.0.0",
    "electron": "^37.2.4",
    "electron-builder": "^24.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "wait-on": "^7.0.0"
  },
  "files": [
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/my-electron-vue-app.git"
  },
  "keywords": [
    "electron",
    "vue",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT"
}
